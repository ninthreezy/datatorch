{
  "name": "@datatorch/web",
  "author": "@datatorch",
  "private": true,
  "license": "private",
  "version": "1.0.0",
  "scripts": {
    "dev": "yarn generate && next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "generate:theme-typings": "chakra-cli tokens ./src/theme.ts",
    "generate": "graphql-codegen --config codegen.yml",
    "generate:watch": "graphql-codegen --watch --config codegen.yml",
    "test:unit": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
