{
  "name": "@datatorch/web",
  "author": "@datatorch",
  "private": true,
  "license": "private",
  "version": "1.0.0",
  "scripts": {
    "dev": "yarn generate && next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write .",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "generate:theme-typings": "chakra-cli tokens ./src/theme.ts",
    "postinstall": "npm run generate:theme-typings",
    "generate": "graphql-codegen --config codegen.yml",
    "generate:watch": "graphql-codegen --watch --config codegen.yml"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.3.16",
    "@chakra-ui/react": "^1.6.0",
    "@chakra-ui/theme-tools": "^1.1.4",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.3.0",
    "@next/bundle-analyzer": "^10.1.3",
    "@react-three/drei": "^4.0.3",
    "framer-motion": "^4.1.2",
    "golden-layout": "^2.0.2",
    "graphql": "^15.5.0",
    "immutability-helper": "^3.1.1",
    "is-hotkey": "^0.2.0",
    "katex": "^0.13.6",
    "leaflet": "^1.7.1",
    "leaflet.glify": "^3.1.0",
    "lodash": "^4.17.21",
    "match-sorter": "^6.3.0",
    "mitt": "^2.1.0",
    "next": "^10.1.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.2",
    "react-grid-layout": "^1.2.4",
    "react-hook-form": "^6.15.5",
    "react-icons": "^4.2.0",
    "react-leaflet": "^3.1.0",
    "react-three-fiber": "^5.3.22",
    "react-twitter-widgets": "^1.9.5",
    "react-use": "^17.2.4",
    "runtypes": "^6.3.0",
    "sass": "^1.32.12",
    "slate": "^0.59.0",
    "slate-history": "^0.62.0",
    "slate-react": "^0.59.0",
    "slugify": "^1.5.2",
    "subscriptions-transport-ws": "^0.9.18",
    "three": "^0.127.0",
    "wavesurfer.js": "^5.0.1"
  },
  "devDependencies": {
    "@chakra-ui/cli": "^1.3.0",
    "@graphql-codegen/add": "^2.0.2",
    "@graphql-codegen/cli": "1.21.4",
    "@graphql-codegen/introspection": "1.18.2",
    "@graphql-codegen/typescript": "1.22.0",
    "@graphql-codegen/typescript-operations": "1.17.16",
    "@graphql-codegen/typescript-react-apollo": "2.2.4",
    "@testing-library/react": "^11.2.6",
    "@types/leaflet": "^1.7.0",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.32",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/wavesurfer.js": "^3.3.1",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.22.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "identity-obj-proxy": "^3.0.0",
    "lint-staged": "^10.5.4",
    "typescript": "^4.2.4"
  }
}
