    "@types/jest": "^26.0.23",
    "framer-motion": "^4.1.17",
    "golden-layout": "^2.2.1",
    "graphql": "^15.5.0",
    "immutability-helper": "^3.1.1",
    "is-hotkey": "^0.2.0",
    "jest": "^27.0.4",
    "jest-watch-typeahead": "^0.6.4",
    "katex": "^0.13.11",
    "leaflet": "^1.7.1",
    "leaflet.glify": "^3.1.0",
    "lodash": "^4.17.21",
    "match-sorter": "^6.3.0",
    "mitt": "^2.1.0",
    "next": "^11.0.0",
    "react": "^17.0.1",
    "react-dom": "^17.0.2",
    "react-grid-layout": "^1.2.5",
    "react-hook-form": "^7.8.8",
    "react-icons": "^4.2.0",
    "react-leaflet": "^3.2.0",
    "react-split-pane": "^0.1.92",
    "react-three-fiber": "^5.3.22",
    "react-twitter-widgets": "^1.9.5",
    "react-use": "^17.2.4",
    "runtypes": "^6.3.1",
    "sass": "^1.35.1",
    "slate": "^0.59.0",
    "slate-history": "^0.62.0",
    "slate-react": "^0.59.0",
    "slugify": "^1.5.3",
    "subscriptions-transport-ws": "^0.9.19",
    "three": "^0.129.0",
    "wavesurfer.js": "^5.0.1"
